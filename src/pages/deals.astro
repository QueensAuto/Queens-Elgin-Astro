---
import BaseLayout from "../layouts/BaseLayout.astro";
import { mobileTiresBrand } from "../brands";

const title = "Deals & Specials | Queens Mobile Tires";
const description =
    "Check out our latest deals and specials on mobile tire installation and automotive services.";
---

<BaseLayout brand={mobileTiresBrand} title={title}>
    <div class="bg-white dark:bg-slate-900 py-24 sm:py-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl text-center">
                <h2
                    class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
                >
                    Current Deals
                </h2>
                <p
                    class="mt-2 text-lg leading-8 text-gray-600 dark:text-gray-300"
                >
                    Save on your next service with our exclusive offers.
                </p>
            </div>

            <div
                class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none"
            >
                <div
                    class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3"
                >
                    <!-- Placeholder Deal -->
                    <div
                        class="flex flex-col bg-gray-50 dark:bg-slate-800 rounded-2xl p-8 border border-gray-200 dark:border-gray-700 shadow-sm"
                    >
                        <h3
                            class="text-xl font-semibold leading-7 tracking-tight text-gray-900 dark:text-white"
                        >
                            New Customer Discount
                        </h3>
                        <p
                            class="mt-4 text-base leading-7 text-gray-600 dark:text-gray-300 flex-grow"
                        >
                            Get $20 off your first mobile tire installation
                            service.
                        </p>
                        <div class="mt-6">
                            <a
                                href="/contact"
                                class="text-sm font-semibold leading-6 text-indigo-600 dark:text-indigo-400"
                                >Claim Offer <span aria-hidden="true"
                                    >&rarr;</span
                                ></a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
