---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { mobileTiresBrand } from "../../brands";
import servicesData from "../../data/services.json";

const title = "One-Stop Shop for Auto Repair | Queens Mobile Tires";
const description =
    "From routine oil changes to complex engine diagnostics, our team offers comprehensive solutions to keep your vehicle running smoothly.";
---

<BaseLayout brand={mobileTiresBrand} title={title}>
    <!-- Hero Section -->
    <!-- NOTE: Extra top padding to account for floating header -->
    <div class="bg-gray-50 dark:bg-slate-900 pt-36 pb-24 sm:pt-48 sm:pb-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div>
                    <!-- Recommended heading size for internal page heroes -->
                    <h3 class="text-gray-900 dark:text-white mb-6">
                        Your <span class="bg-[#0e79c9] text-white px-2 rounded"
                            >One-Stop Shop</span
                        > For All Your Auto Repair Needs
                    </h3>
                    <p
                        class="paragraph-1 text-gray-600 dark:text-gray-300 mb-6"
                    >
                        From routine oil changes to complex engine diagnostics,
                        our team offers comprehensive solutions to keep your
                        vehicle running smoothly.
                    </p>
                    <p class="paragraph-1 text-gray-600 dark:text-gray-300">
                        We're dedicated to providing honest, reliable service
                        tailored to your vehicle's needs, ensuring you drive
                        away with confidence and peace of mind.
                    </p>
                </div>
                <div class="relative rounded-2xl overflow-hidden shadow-2xl">
                    <img
                        src="/images/shop/Queens-Auto-Services-Elgin-Front-View-Shop-001.webp"
                        alt="Queens Auto Services Shop Front"
                        class="w-full h-full object-cover"
                    />
                </div>
            </div>
        </div>
    </div>

    <!-- Services Grid -->
    <div class="bg-gray-50 dark:bg-slate-900 pb-24 sm:pb-32">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div
                class="mx-auto grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:max-w-none lg:grid-cols-3"
            >
                {
                    servicesData.map((category) => (
                        <div class="flex flex-col rounded-md bg-[#1F2937] p-8 shadow-sm hover:shadow-lg transition-shadow border border-gray-700">
                            <h6 class="text-white mb-6">{category.title}</h6>
                            <ul class="flex-1 space-y-2">
                                {category.services.map((service) => (
                                    <li>
                                        <a
                                            href={`/services/${category.slug}/${service.slug}/`}
                                            class="text-white opacity-80 hover:text-queens-secondary hover:opacity-100 hover:underline transition-all text-sm"
                                        >
                                            {service.title}
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</BaseLayout>
