---
import ThemeToggle from "./ThemeToggle.astro";
import CtaButton from "./CtaButton.astro";
import type { BrandConfig } from "../brands";

const { brand, inverse = false } = Astro.props as {
  brand: BrandConfig;
  inverse?: boolean;
};

const nameParts = brand.name.split(" ");
const firstName = nameParts[0];
const secondName = nameParts.length > 1 ? nameParts[1] : "";
---

<div
  class="absolute top-0 left-0 right-0 z-50 flex justify-center md:pt-6 md:px-4 pointer-events-none"
>
  <header
    id="main-nav"
    class={`pointer-events-auto relative tracking-tight flex items-center justify-between w-full transition-all duration-500
    /* Mobile Styles */
    px-6 py-4 bg-white/0 dark:bg-slate-900/0 border-b border-transparent
    /* Desktop Styles */
    md:rounded-full md:px-6 md:py-3 md:shadow-[0_8px_30px_rgb(0,0,0,0.04)] md:dark:shadow-[0_8px_30px_rgb(0,0,0,0.2)] md:border md:border-white/20 md:dark:border-white/10 md:max-w-6xl
    ${brand.logoPathWhite || "text-white"} 
    ${
      // If inverse (transparent on dark), remove desktop white bg/blur default, apply specifically if needed or keep transparent
      // Actually, for Arvora style, the desktop header might still want to be a "pill" or transparent?
      // User asked about "mobile hamburger menu".
      // Let's keep desktop behavior mostly same but allow text override.
      "md:bg-white md:dark:bg-queens-dark md:shadow-sm md:border md:border-gray-100 md:dark:border-gray-800 transition-colors duration-300"
    }`}
  >
    <!-- Logo -->
    <a
      href={`/`}
      class="group flex items-center gap-2 mr-auto md:mr-8 shrink-0"
    >
      {
        brand.logoPath && brand.logoPath.includes("New-Logo") ? (
          <>
            {/* Standard Logo - Shown in Light Mode */}
            <img
              src={brand.logoPath}
              alt={brand.name}
              class={`h-8 w-auto object-contain block ${brand.logoPathWhite ? "dark:hidden" : ""}`}
            />
            {/* White/Dark Mode Logo - Shown in Dark Mode */}
            {brand.logoPathWhite && (
              <img
                src={brand.logoPathWhite}
                alt={brand.name}
                class="h-8 w-auto object-contain hidden dark:block"
              />
            )}
          </>
        ) : (
          <span
            class={`text-xl font-bold tracking-tighter uppercase group-hover:text-queens-secondary transition-colors duration-300 ${inverse ? "text-white" : "text-queens-primary dark:text-white"}`}
          >
            {firstName}{" "}
            <span
              class={`group-hover:text-queens-primary transition-colors duration-300 ${inverse ? "text-queens-secondary" : "text-queens-secondary"}`}
            >
              {secondName}
            </span>
          </span>
        )
      }
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-1">
      <a
        href={`/`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-white/10 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Home</a
      >
      <a
        href={`/services`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-white/10 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Services</a
      >
      <a
        href={`/buy-new-tires`}
        data-astro-reload
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-white/10 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >New Tires</a
      >
      <a
        href={`/deals`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-white/10 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Deals</a
      >
      <a
        href={`/contact`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-white/10 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Contact</a
      >
    </nav>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-3 ml-auto md:ml-0 pl-0 md:pl-0">
      <ThemeToggle inverse={inverse} />

      <div class="hidden md:block">
        <CtaButton 
          href="/request-an-appointment" 
          text="Book Appointment" 
        />
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class={`md:hidden p-2 rounded-full transition-colors ${inverse ? "text-white hover:bg-white/10" : "text-queens-primary hover:bg-gray-100 dark:text-white dark:hover:bg-white/10"}`}
        aria-label="Open Menu"
      >
        <!-- Grid Icon (smaller dots) -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" class="w-5 h-5">
          <circle cx="5" cy="5" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="12" cy="5" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="19" cy="5" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="5" cy="12" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="12" cy="12" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="19" cy="12" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="5" cy="19" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="12" cy="19" r="1.5" stroke="currentColor" stroke-width="1.5"/>
          <circle cx="19" cy="19" r="1.5" stroke="currentColor" stroke-width="1.5"/>
        </svg>
      </button>
    </div>
  </header>
</div>

<!-- Mobile Menu Overlay -->
<div id="mobile-menu" class="fixed inset-0 z-[100] hidden md:hidden" aria-hidden="true">
  <!-- Click-to-close backdrop (invisible, for clicking outside) -->
  <div id="mobile-menu-backdrop" class="absolute inset-0"></div>

  <!-- Dark Layer - FULL WIDTH, semi-transparent (slides in FIRST, slides out LAST) -->
  <div
    id="mobile-menu-dark-layer"
    class="absolute inset-0 bg-black/70 backdrop-blur-sm transform -translate-x-full transition-transform duration-500 ease-out"
  >
  </div>

  <!-- Menu Panel (slides in SECOND on open, slides out FIRST on close) -->
  <div
    id="mobile-menu-panel"
    class="absolute top-0 left-0 bottom-0 w-[85%] max-w-sm bg-white dark:bg-slate-900 shadow-2xl transform -translate-x-full transition-transform duration-500 ease-out"
  >
    <div class="flex flex-col h-full">
      <!-- Header -->
      <div class="flex justify-between items-center p-6 border-b border-gray-100 dark:border-gray-800">
        <!-- Logo (Dynamic Theme Support) -->
        <a href="/" class="group flex items-center gap-2">
          {
            brand.logoPath && brand.logoPath.includes("New-Logo") ? (
              <>
                {/* Standard Logo - Shown in Light Mode */}
                <img
                  src={brand.logoPath}
                  alt={brand.name}
                  class={`h-8 w-auto object-contain block ${brand.logoPathWhite ? "dark:hidden" : ""}`}
                />
                {/* White/Dark Mode Logo - Shown in Dark Mode */}
                {brand.logoPathWhite && (
                  <img
                    src={brand.logoPathWhite}
                    alt={brand.name}
                    class="h-8 w-auto object-contain hidden dark:block"
                  />
                )}
              </>
            ) : (
              <span class="text-xl font-bold tracking-tighter uppercase text-queens-primary dark:text-white">
                {firstName} <span class="text-queens-secondary">{secondName}</span>
              </span>
            )
          }
        </a>
        <button
          id="mobile-menu-close"
          class="p-2 -mr-2 text-gray-400 hover:text-gray-700 dark:hover:text-white transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <!-- Links (Centered, Big Text, Animated) -->
      <nav
        id="mobile-menu-links"
        class="flex-1 flex flex-col items-center justify-center space-y-6 opacity-0 translate-y-8 transition-all duration-700 ease-out"
      >
        <a href={`/`} class="text-2xl font-bold text-gray-900 dark:text-white hover:text-queens-primary transition-colors">
          Home
        </a>
        <a href={`/services`} class="text-2xl font-bold text-gray-900 dark:text-white hover:text-queens-primary transition-colors">
          Services
        </a>
        <a href={`/buy-new-tires`} data-astro-reload class="text-2xl font-bold text-gray-900 dark:text-white hover:text-queens-primary transition-colors">
          New Tires
        </a>
        <a href={`/deals`} class="text-2xl font-bold text-gray-900 dark:text-white hover:text-queens-primary transition-colors">
          Deals
        </a>
        <a href={`/contact`} class="text-2xl font-bold text-gray-900 dark:text-white hover:text-queens-primary transition-colors">
          Contact
        </a>
        
        <div class="pt-8 w-full max-w-xs px-4 flex justify-center">
           <CtaButton 
            href="/request-an-appointment" 
            text="Book Appointment" 
          />
        </div>
      </nav>
    </div>
  </div>
</div>

<script>
  function setupHeader() {
    const nav = document.getElementById("main-nav");
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileMenuDarkLayer = document.getElementById("mobile-menu-dark-layer");
    const mobileMenuPanel = document.getElementById("mobile-menu-panel");
    const mobileMenuLinks = document.getElementById("mobile-menu-links"); // New ref
    const mobileMenuBackdrop = document.getElementById("mobile-menu-backdrop");
    const mobileMenuClose = document.getElementById("mobile-menu-close");

    if (!nav) return;

    // Desktop header animation
    const isDesktop = window.matchMedia("(min-width: 768px)").matches;
    
    if (isDesktop) {
      requestAnimationFrame(() => {
        nav.style.transition = "transform 800ms ease-out";
        nav.style.transform = "scale(1)";
        
        setTimeout(() => {
          nav.style.transition = "none";
          nav.classList.add("animate-elastic-bounce");
          setTimeout(() => {
            nav.classList.remove("animate-elastic-bounce");
            nav.style.transition = "";
          }, 500);
        }, 800);
      });
    }

    if (!mobileMenuButton || !mobileMenu || !mobileMenuPanel || !mobileMenuDarkLayer) return;

    const openMobileMenu = () => {
      mobileMenu.classList.remove("hidden");
      document.body.style.overflow = "hidden";
      
      // Staggered open: Dark layer first, then menu panel
      requestAnimationFrame(() => {
        // Dark layer slides in immediately
        mobileMenuDarkLayer.classList.remove("-translate-x-full");
        
        // Menu panel slides in with delay
        setTimeout(() => {
          mobileMenuPanel.classList.remove("-translate-x-full");
          
          // Trigger Text Fade-In/Slide-Up when menu is almost fully open
          // Menu anim takes 500ms. We trigger this at 300ms + (internal delay)
          // Actually, let's trigger it at 400ms so it starts appearing as drawer settles
          setTimeout(() => {
            mobileMenuLinks?.classList.remove("opacity-0", "translate-y-8");
          }, 400);

        }, 150);
      });
    };

    const closeMobileMenu = () => {
      // Reset Text Animation (Slide Down/Fade Out) immediately
      mobileMenuLinks?.classList.add("opacity-0", "translate-y-8");

      // Staggered close: Menu panel first, then dark layer
      mobileMenuPanel.classList.add("-translate-x-full");
      
      // Dark layer slides out with delay
      setTimeout(() => {
        mobileMenuDarkLayer.classList.add("-translate-x-full");
      }, 150);
      
      document.body.style.overflow = "";

      // Wait for both animations to finish before hiding
      setTimeout(() => {
        mobileMenu.classList.add("hidden");
      }, 650); // 500ms + 150ms delay
    };

    mobileMenuButton.addEventListener("click", openMobileMenu);
    mobileMenuClose?.addEventListener("click", closeMobileMenu);
    mobileMenuBackdrop?.addEventListener("click", closeMobileMenu);

    // Close menu when clicking a nav link
    mobileMenu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", (e) => {
        // If already handling close, let default proceed
        if (link.dataset.isClosing === "true") return;

        // Skip for modifier keys or new tab
        if (e.metaKey || e.ctrlKey || e.shiftKey || e.altKey || link.target === "_blank") return;

        e.preventDefault();
        
        // Trigger close animation
        closeMobileMenu();

        // Wait for animation, then navigate
        setTimeout(() => {
          link.dataset.isClosing = "true";
          link.click();
        }, 450); // 450ms allows most of the 500ms animation to show
      });
    });

    // Clean up on page swap
    document.addEventListener(
      "astro:before-swap",
      () => {
        closeMobileMenu();
      },
      { once: true },
    );
  }

  // Run on initial load
  setupHeader();

  // Run on view transitions
  document.addEventListener("astro:page-load", setupHeader);
</script>

<style>
  /* Desktop: Start navbar at 80% scale - JS will animate to 100% */
  @media (min-width: 768px) {
    #main-nav {
      transform: scale(0.8);
    }
  }
</style>
