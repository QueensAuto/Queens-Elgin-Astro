---
import CtaButton from "./CtaButton.astro";
---

<section class="map-section">
    <div class="map-inner">
        <!-- Text block -->
        <div class="map-text">
            <span class="map-eyebrow">Find Us</span>
            <h2 class="map-heading">
                Visit Queens Auto Services in <span class="map-highlight"
                    >Elgin, IL</span
                >
            </h2>
            <p class="map-description">
                Conveniently located at 1303 Dundee Ave, Elgin. Drop in or
                schedule an appointment — we're ready to help.
            </p>

            <div class="map-details">
                <div class="map-detail-item">
                    <svg
                        class="map-icon"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                        ></path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <div>
                        <p class="map-detail-label">Address</p>
                        <p class="map-detail-value">
                            1303 Dundee Ave, Elgin, IL 60120
                        </p>
                    </div>
                </div>

                <div class="map-detail-item">
                    <svg
                        class="map-icon"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                    </svg>
                    <div>
                        <p class="map-detail-label">Phone</p>
                        <a
                            href="tel:2246353000"
                            class="map-detail-value map-phone">(224) 635-3000</a
                        >
                    </div>
                </div>

                <div class="map-detail-item">
                    <svg
                        class="map-icon"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <div>
                        <p class="map-detail-label">Hours</p>
                        <p class="map-detail-value">
                            Mon–Fri: 7:30 AM – 6:00 PM
                        </p>
                        <p class="map-detail-value">Sat: 7:30 AM – 4:00 PM</p>
                    </div>
                </div>
            </div>

            <CtaButton
                href="https://maps.app.goo.gl/piDCuk2RaWeGzLY76"
                text="Get Directions"
                target="_blank"
            />
        </div>

        <!-- Map iframe -->
        <div class="map-frame-wrapper">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2962.146239472928!2d-88.265253!3d42.06148470000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880f05f4cac515ff%3A0xe840d24382731048!2sQueens%20Auto%20Services%20Elgin!5e0!3m2!1sen!2sus!4v1771430348472!5m2!1sen!2sus"
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Queens Auto Services Elgin location on Google Maps"
                aria-label="Google Map showing Queens Auto Services at 1303 Dundee Ave, Elgin, IL"
            ></iframe>
        </div>
    </div>
</section>

<style>
    .map-section {
        background: var(--color-surface, #f8f8f8);
        padding: 5rem 0;
    }

    :global(.dark) .map-section {
        background: #0d0d0d;
    }

    .map-inner {
        max-width: 1280px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }

    @media (max-width: 1024px) {
        .map-inner {
            grid-template-columns: 1fr;
            gap: 2.5rem;
        }
    }

    /* Text side */
    .map-eyebrow {
        display: inline-block;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: #0a79c8;
        margin-bottom: 1rem;
    }

    .map-heading {
        font-size: clamp(1.75rem, 3vw, 2.5rem);
        font-weight: 800;
        color: #0b1121;
        line-height: 1.15;
        margin-bottom: 1rem;
    }

    :global(.dark) .map-heading {
        color: #fff;
    }

    .map-highlight {
        color: #0a79c8;
    }

    .map-description {
        font-size: 1.05rem;
        color: #6b7280;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    :global(.dark) .map-description {
        color: #9ca3af;
    }

    /* Detail items */
    .map-details {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        margin-bottom: 2rem;
    }

    .map-detail-item {
        display: flex;
        align-items: flex-start;
        gap: 0.875rem;
    }

    .map-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
        margin-top: 0.125rem;
        color: #0a79c8;
    }

    .map-detail-label {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #9ca3af;
        margin-bottom: 0.125rem;
    }

    .map-detail-value {
        font-size: 0.95rem;
        color: #374151;
        font-weight: 500;
        line-height: 1.5;
    }

    :global(.dark) .map-detail-value {
        color: #d1d5db;
    }

    .map-phone {
        text-decoration: none;
        transition: color 0.2s;
    }

    /* Map iframe */
    .map-frame-wrapper {
        width: 100%;
        aspect-ratio: 4 / 3;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
        border: 1px solid rgba(0, 0, 0, 0.08);
    }

    :global(.dark) .map-frame-wrapper {
        border-color: rgba(255, 255, 255, 0.08);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    }

    .map-frame-wrapper iframe {
        display: block;
        width: 100%;
        height: 100%;
    }

    @media (max-width: 1024px) {
        .map-frame-wrapper {
            aspect-ratio: 16 / 9;
        }
    }
</style>
