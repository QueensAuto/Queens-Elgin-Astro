---
const {
    message = "Get a FREE Wheel Alignment when you buy 4 new tires!",
    mobileMessage = "FREE Alignment When You Buy 4 Tires",
    ctaText = "Shop Tires Now",
    href = "/buy-new-tires",
    class: className = "",
} = Astro.props;
---

<div
    id="AnnouncementBarWrapper"
    class:list={["announcement-bar-wrapper w-full", className]}
    data-state="hidden"
>
    <div
        id="AnnouncementBar"
        class="relative w-full !bg-amber-50 border-b border-yellow-200/50 overflow-hidden"
    >
        <div class="w-full px-4 py-1.5 sm:px-6 lg:px-8 relative">
            <div
                class="flex flex-row items-center justify-center gap-2 sm:gap-4 text-center pr-8"
            >
                <div class="flex items-center gap-2">
                    <p
                        class="text-sm font-medium !text-yellow-900 tracking-wide"
                    >
                        <span class="hidden sm:inline">{message}</span>
                        <span class="inline sm:hidden">{mobileMessage}</span>
                    </p>
                </div>

                <a
                    href={href}
                    data-astro-reload
                    class="group inline-flex items-center gap-1.5 text-sm font-bold !text-yellow-900 hover:!text-queens-secondary transition-colors duration-200"
                >
                    <span class="hidden sm:inline">
                        {ctaText}
                    </span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-4 w-4 transform group-hover:translate-x-0.5 transition-transform animate-[pulse-arrow_1.5s_ease-in-out_infinite]"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="#0a79c8"
                        stroke-width="2.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M5 12h14"></path>
                        <path d="m12 5 7 7-7 7"></path>
                    </svg>
                </a>
            </div>

            {/* Close Button */}
            <button
                id="AnnouncementBarClose"
                type="button"
                aria-label="Close announcement"
                class="absolute right-2 top-1/2 -translate-y-1/2 p-1.5 rounded-full !text-yellow-800/60 hover:!text-yellow-900 hover:!bg-yellow-200/50 transition-colors duration-200"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        </div>

        {/* Subtle shine effect */}
        <div
            class="absolute inset-0 pointer-events-none bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full animate-[shimmer_3s_infinite]"
        >
        </div>
    </div>
</div>

<style>
    @keyframes shimmer {
        100% {
            transform: translateX(100%);
        }
    }

    @keyframes pulse-arrow {
        0%,
        100% {
            transform: translateX(0);
            opacity: 1;
        }
        50% {
            transform: translateX(4px);
            opacity: 0.7;
        }
    }

    .announcement-bar-wrapper {
        z-index: 100;
        overflow: hidden;
        /* Initial state handled by GSAP/JS to avoid FOUC, but good to set hidden here */
        height: 0;
        opacity: 0;
        visibility: hidden;
    }
</style>

<script>
    import { gsap } from "gsap";

    function initAnnouncementBar() {
        const wrapper = document.getElementById("AnnouncementBarWrapper");
        const closeBtn = document.getElementById("AnnouncementBarClose");
        // Try all known header IDs
        const headerWrapper =
            document.getElementById("header-wrapper") ||
            document.getElementById("header-wrapper-services");

        if (!wrapper) return;

        // Check for cookie
        const isDismissed = document.cookie
            .split("; ")
            .find((row) => row.startsWith("announcement-dismissed="));

        if (isDismissed) {
            // Ensure it stays hidden
            gsap.set(wrapper, { height: 0, autoAlpha: 0 });
            return;
        }

        const shouldAnimateHeader =
            headerWrapper && !headerWrapper.contains(wrapper);

        // Function to animate OPEN
        function openBar() {
            // 1. Get natural height
            // We set height auto, but keep it invisible to measure
            gsap.set(wrapper, {
                height: "auto",
                opacity: 0,
                visibility: "hidden",
            });
            const naturalHeight = wrapper!.offsetHeight;

            // Reset to 0 for the 'from' state
            gsap.set(wrapper, { height: 0, opacity: 0, visibility: "visible" });

            // 2. Animate wrapper
            const tl = gsap.timeline({
                defaults: { ease: "power4.out", duration: 1.2 }, // Long duration with power4 gives that buttery smooth slow-down
            });

            tl.to(wrapper, {
                height: naturalHeight,
                opacity: 1,
                onComplete: () => {
                    wrapper!.style.height = "auto"; // Ensure responsive resizing works after animation
                },
            });

            // 3. Animate Header Position (Sync with bar)
            if (shouldAnimateHeader && headerWrapper) {
                gsap.to(headerWrapper, {
                    top: naturalHeight,
                    ease: "power4.out",
                    duration: 1.2,
                });
            }
        }

        // Function to animate CLOSE
        function closeBar() {
            const tl = gsap.timeline({
                defaults: { ease: "power3.inOut", duration: 0.6 },
            });

            tl.to(wrapper, {
                height: 0,
                opacity: 0,
                onComplete: () => {
                    gsap.set(wrapper, { visibility: "hidden" });
                },
            });

            if (shouldAnimateHeader && headerWrapper) {
                gsap.to(headerWrapper, {
                    top: 0,
                    ease: "power3.inOut",
                    duration: 0.6,
                });
            }
        }

        // Delay start by 3 seconds
        setTimeout(() => {
            openBar();
        }, 3000);

        // Close button handler
        if (closeBtn) {
            closeBtn.addEventListener("click", () => {
                closeBar();

                // Set cookie for 7 days
                const date = new Date();
                date.setTime(date.getTime() + 7 * 24 * 60 * 60 * 1000);
                document.cookie =
                    "announcement-dismissed=true; expires=" +
                    date.toUTCString() +
                    "; path=/";
            });
        }
    }

    // Initialize on page load and after view transitions
    initAnnouncementBar();
    document.addEventListener("astro:page-load", initAnnouncementBar);
</script>
